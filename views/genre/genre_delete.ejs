<!DOCTYPE html>
<html>

<head>
    <title>
        <%= 'Delete ' + genre.name %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <%- include('../partials/nav.ejs') %>
    <%- include('../partials/search.ejs') %>
        <div class="mainContainer">
            <h1><%= 'Delete ' + genre.name %></h1>
            <% if (genre_albums?.length){ %>
                <h2>Delete the following albums: </h2>
                <div class="listContainer">
                    <% genre_albums.forEach((album)=> { %>
                        <div>
                            <a href=<%- album.url %>>
                                <img src=<%- album.image==="" || undefined ? 'https://iili.io/HlHy9Yx.png' : album.image
                                    %>
                                alt="" class="imageSmall"></a>
                            <div class="listLower">
                                <div>
                                    <a href=<%- album.url %>>
                                        <h2>
                                            <%= album.title %>
                                        </h2>
                                    </a>
                                    <p>
                                        <%= album.release_date_formatted %>
                                    </p>
                                </div>
                                <a href=<%- album.url + '/delete' %>>
                                    <div class="deleteButton"></div>
                                </a>
                            </div>
                        </div>
                        <% }) %>
                    <% } else { %>
                        <form method="post" class="inputForm">
                            <label for="password">Enter password to delete:</label>
                            <input type="password" name="password" id="password">
                            <button type="submit">Delete</button>
                        </form>
                        <% if(error){ %>
                            <h3>
                                <%= error %>
                            </h3>
                            <% } %>
                    <% } %> 
                </div>
        </div>
</body>