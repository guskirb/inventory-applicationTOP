<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <%- include('../partials/nav.ejs') %>
    <%- include('../partials/search.ejs') %>
        <div class="mainContainer">
            <h1>
                <%= title %>
            </h1>
            <form method="post" class="inputForm">
                <label for="name">Label Name:
                    <input type="text" name="name" id="name" value='<%=undefined===label ? '' : label.name %>'>
                </label>
                <label for="founded">Year Founded:
                    <input type="number" name="founded" id="founded" value='<%-undefined===label ? '' : label.founded %>'>
                </label>
                <button type="submit">Submit</button>
            </form>
            <% if(errors){ %>
                <% errors?.forEach((error) => { %>
                    <h3> <%= error.msg %> </h3>
                <% }) %>
            <% } %>
        </div>
</body>

</html>